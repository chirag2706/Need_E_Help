<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title><%= category %> </title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="ejs.min.js"></script>
    <style>
      #amount{
        color: red;
        text-align: left;
      }

      #place{
        text-align: right;
         color: red;
        size : 1px;
      }

      .col, .col-1, .col-10, .col-11, .col-12, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-auto, .col-lg, .col-lg-1, .col-lg-10, .col-lg-11, .col-lg-12, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-lg-auto, .col-md, .col-md-1, .col-md-10, .col-md-11, .col-md-12, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-md-auto, .col-sm, .col-sm-1, .col-sm-10, .col-sm-11, .col-sm-12, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-sm-auto, .col-xl, .col-xl-1, .col-xl-10, .col-xl-11, .col-xl-12, .col-xl-2, .col-xl-3, .col-xl-4, .col-xl-5, .col-xl-6, .col-xl-7, .col-xl-8, .col-xl-9, .col-xl-auto {
    position: relative;
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    padding-bottom: 25px;
}

      .grid-container {
  grid-row-gap: 50px;
}


      .fa-map-marker-alt{
        color: red;
      }
    </style>

      <%- include('./navbar_style') %>
      <%- include('./header') %>
  </head>
  <body>
    <div class="container">

    <ul>

      <div class="row text-center downside" id="one" style="display:flex; flex-wrap:wrap;">
        <% files.forEach((file)=>{%>
            <%var cnt=0;%>
            <% if (file.metadata.category === category){%>
              <div class="col-lg-4 col-sm-6 zoom">
                <div class="img-thumbnail">
                  <a href="/needy?phn=<%= file.metadata.Phone %>"> <img class="img-fluid" src="/image/<%= file.filename %>"></a>
                  <div class="caption">
                    <h6 id="place"><i class="fas fa-map-marker-alt"></i> <%= file.metadata.Place%></h6>
                    <h5><%= file.metadata.NameofPerson %></h5>
                    <p> <%= file.metadata.Intro%></p>
                    <% if( data[cnt].HelpType === "Donation" ) {%>

                      <h5 id="amount">Donation - Rs. <%= file.metadata.Goal%></h5>
                    <%}else{%>
                      <h5 id="amount">Rs. <%= file.metadata.Goal%> per Month.</h5>
                    <%}%>
                    <% cnt++; %>
                  </div>
                </div>
              </div>
            <% } %>

              <!-- <h1>heading is <%= file.filename %></h1> -->
              <!-- <img src="/image/<%= file.filename %>" alt="#"> -->

        <%})%>
      </div>

    </ul>
  </div>






  </body>
</html>
